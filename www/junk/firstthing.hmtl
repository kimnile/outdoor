        $("#login-group").css("display", "none");
        $("#name-pass").css("display", "inline-block");
        //$("#name-pass").show();
      }
    </script>
    <style>
      #title, #nav-group, .nav-item, #login-group, .login-item{ display: inline-block;}
      .nav-item:hover, .login-item:hover{background: #09b;}


      nav, #main{
        margin-left: 3rem;
        margin-right: 3rem;
      }

      nav{
        display: inline-block;
        margin-bottom: 2rem;
      }
      #title{
        border-left: 1rem solid #09b;
